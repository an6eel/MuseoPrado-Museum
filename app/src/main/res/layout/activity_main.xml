<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCE4B2">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="28dp"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/pradol"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:layout_marginLeft="12dp"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toRightOf="@id/imageView14"
            app:srcCompat="@drawable/prado2"
            tools:layout_editor_absoluteY="0dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡BIENVENIDO!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="306dp"
            android:layout_height="321dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/velazquez" />

        <Button
            android:id="@+id/button"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif"
            android:onClick="openAgent"
            android:text=" Pulsa aqui para que pueda ayudarte"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>