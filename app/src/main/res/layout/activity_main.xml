<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCE4B2">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/pradol" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="246dp"
            android:layout_height="64dp"
            android:contentDescription="@string/logo"
            app:layout_constraintLeft_toRightOf="@id/imageView14"
            app:srcCompat="@drawable/prado2" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/prado"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/prado"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Â¡BIENVENIDO!"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/gallery"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:onClick="openGallery"
        android:layout_gravity="center"
        android:text="Entrar al museo"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/agent"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:onClick="openAgent"
        android:layout_gravity="center"
        android:text="Consultar al agente"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />




</LinearLayout>